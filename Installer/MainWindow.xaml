<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HLFixes Installer" Height="175" Width="460" Loaded="Window_Loaded" SizeToContent="Width">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Name="infoLabel" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button Grid.Column="0" Grid.Row="1" Name="installButton" Content="Install" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="60" Click="installButton_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Name="uninstallButton" Content="Uninstall" HorizontalAlignment="Center" VerticalAlignment="Center" IsEnabled="False" Height="30" Width="60" Click="uninstallButton_Click"/>
    </Grid>
</Window>
